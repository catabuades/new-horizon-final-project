extends ../layout

block content

  .resume
  .container
    .row
      .well
        h2.col-xs-12.col-md-6.inline-block.h2 Step 3: Payment
        // chekout bar
        .col-xs-12.col-md-6.container
          .row.bs-wizard(style='border-bottom:0;')
            .col-xs-3.bs-wizard-step.complete
              .text-center.bs-wizard-stepnum Step 1
              .progress
                .progress-bar
              a.bs-wizard-dot(href='/step_1')
              .bs-wizard-info.text-center Resume
            .col-xs-3.bs-wizard-step.complete
              // complete
              .text-center.bs-wizard-stepnum Step 2
              .progress
                .progress-bar
              a.bs-wizard-dot(href='/step_2')
              .bs-wizard-info.text-center Personal information
            .col-xs-3.bs-wizard-step.active
              // complete
              .text-center.bs-wizard-stepnum Step 3
              .progress
                .progress-bar
              a.bs-wizard-dot(href='/step_3')
              .bs-wizard-info.text-center Payment
            .col-xs-3.bs-wizard-step.disabled
              // active
              .text-center.bs-wizard-stepnum Step 4
              .progress
                .progress-bar
              a.bs-wizard-dot(href='/step_4')
              .bs-wizard-info.text-center Confirmation
      // chekout bar
    div.row
      .col-xs-12.col-md-4.col-md-offset-4
        .panel.panel-default
          .panel-heading
            h3.panel-title
              | Payment Details
          .panel-body
            form(role='form')
              .form-group
                label(for='cardNumber')
                  | CARD NUMBER
                .input-group
                  input#cardNumber.form-control(type='text', placeholder='Valid Card Number', required='', autofocus='')
                  span.input-group-addon
                    span.glyphicon.glyphicon-lock
              .row
                .col-xs-7.col-md-7
                  .form-group
                    p
                      strong EXPIRY DATE
                    .col-xs-6.col-lg-6.pl-ziro
                      input#expityMonth.form-control(type='text', placeholder='MM', required='')
                    .col-xs-6.col-lg-6.pl-ziro
                      input#expityYear.form-control(type='text', placeholder='YY', required='')
                .col-xs-5.col-md-5.pull-right
                  .form-group
                    p
                      strong CV CODE
                    input#cvCode.form-control(type='password', placeholder='CV', required='')
        ul.nav.nav-pills.nav-stacked
          li.active
            a(href='#')
              span.badge.pull-right
                span.glyphicon.glyphicon-usd
                | 4200
              |  Final Payment
        br
        a.btn.btn-success.btn-lg.btn-block(href='/step_4', role='button') Pay
