extends ../layout

block content

  .container
    div
      h2.h2.inline-block.page-title Catalogue
      .inline-block.pull-right
        p.inline-block.size Filter by
        input(type='checkbox', data-toggle='toggle', data-on='Road', data-off='Road')
        input(type='checkbox', data-toggle='toggle', data-on='Mountain', data-off='Mountain')
        input(type='checkbox', data-toggle='toggle', data-on='City', data-off='City')
        input(type='checkbox', data-toggle='toggle', data-on='E-Bike', data-off='E-Bike')
    legend.h3 Road
    .row
      each bike in bikes
        .col-sm-6.col-md-3
          .zoomIt.thumbnail
            figure.pull-left
              a(href='bike-info.html')
                img.media-object.img-rounded.img-responsive(style='background-image: url(' + bike.image + ')')
            .caption
              h4.h4 #{ bike.title }
              p Category: #{ bike.category }
              p Description: #{ bike.description }
              p
                a.btn.btn-default.info(href='/bike-info', role='button') + info